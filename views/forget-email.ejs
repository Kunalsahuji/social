<%- include('partials/header') %>
<div class="bg-white bg-opacity-90 rounded-2xl w-full max-w-xl mx-auto p-8 shadow-lg mt-24">
    <h1 class="bg-blue-200 w-full rounded-xl p-4 text-center text-3xl font-extrabold text-purple-600">
        Forgot Email
    </h1>

    <form class="mt-6 text-center" action="/forget-email" method="post">
        <label class="block text-xl font-semibold text-gray-700 mb-2" for="forgetEmail">Enter your registered email:</label>
        <input class="w-full mb-6 border border-gray-300 p-3 rounded-xl text-xl" type="email" name="forgetEmail" id="forgetEmail"
            placeholder="Enter existing email">
        <button
            class="w-full text-center bg-purple-400 hover:bg-purple-600 rounded-xl text-white py-3 px-5 transition duration-300 ease-in-out transform hover:scale-105">
            Submit Email
        </button>
    </form>
</div>

<%- include('partials/footer') %>
