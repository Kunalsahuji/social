<%- include('partials/header') %>

    <div
        class="flex flex-col items-center w-full max-w-4xl mx-auto mt-6 p-4 bg-white bg-opacity-90 rounded-2xl shadow-lg">
        <!-- Profile Header -->
        <div
            class="flex items-center justify-between w-full max-w-4xl bg-gray-200 rounded-full p-4 border border-gray-300">
            <div class="flex items-center gap-4">
                <img class="w-16 h-16 object-cover rounded-full border-2 border-gray-400"
                    src="/images/<%= user.profilePic %>" alt="Profile Picture">
                <h1 class="text-2xl font-bold text-gray-700">Welcome <%= user.username %>
                </h1>
            </div>
            <div class="flex gap-4">
                <a href="/create-post"
                    class="flex items-center text-xl bg-purple-400 hover:bg-purple-600 text-white rounded-full px-4 py-2">
                    <i class="ri-add-large-line"></i>
                    <span class="ml-2">Create Post</span>
                </a>
                <a href="/update-user/<%= user._id %>"
                    class="flex items-center text-xl bg-gray-300 hover:bg-gray-400 rounded-full px-4 py-2">
                    <img class="w-12 h-12 object-cover rounded-full border-2 border-gray-400"
                        src="/images/<%= user.profilePic %>" alt="Profile Update">
                    <span class="ml-2">Update Profile</span>
                </a>
            </div>
        </div>

        <hr class="my-6 w-full border-gray-300">

        <!-- User Posts -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 w-full max-w-4xl">
            <% posts.forEach((post)=> { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="flex items-center p-4 border-b border-gray-200">
                        <img class="w-12 h-12 rounded-full object-cover" src="/images/<%= post.user.profilePic %>"
                            alt="Profile Picture">
                        <div class="ml-3">
                            <h2 class="font-bold text-lg">
                                <%= post.user.name %>
                            </h2>
                            <small class="text-gray-600">
                                <%= post.createdAt.toLocaleDateString() %> | <%= post.createdAt.toLocaleTimeString() %>
                            </small>
                        </div>
                    </div>
                    <img class="w-full h-48 object-cover" src="/images/<%= post.media %>" alt="Post Media">
                    <div class="p-4">
                        <div class="flex items-center gap-4 mb-2">
                            <span class="text-lg font-semibold">
                                <%= post.likes.length %>
                            </span>
                            <a href="/like/<%= post._id %>" class="text-xl">
                                <% if (post.likes.includes(user._id)) { %>
                                    <i class="text-red-400 ri-heart-3-fill"></i>
                                    <% } else { %>
                                        <i class="ri-heart-3-line"></i>
                                        <% } %>
                            </a>
                            <span class="text-lg font-medium underline">
                                <%= post.title %>
                            </span>
                            <i class="ri-chat-3-line"></i>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('partials/footer') %>