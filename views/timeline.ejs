<%- include('partials/header') %>
    <div class="flex items-center gap-5 bg-gray-50 w-[25%] rounded-full">
        <h1
            class="flex justify-center items-center w-[75%] rounded-2xl text-center text-2xl font-extrabold text-zinc-600 ">
            <%= user.username  %>' Timeline
        </h1>
        <img class="w-[12vh] h-[12vh] object-cover rounded-full" src="/images/<%= user.profilePic %>" alt="postMedia">
    </div>
    <hr class="m-auto w-full border rounded-2xl mt-2 mb-5">
    <div class="rounded-xl w-[80%] pt-[2%] m-auto flex flex-wrap">

        <% user.posts.forEach((post)=> { %>
            <div class="card w-[23%] mr-5 mb-5">
                <div class="flex items-center mb-2">
                    <img class="w-[7vh] h-[7vh] rounded-full object-cover" src="/images/<%= user.profilePic %>"
                        alt="profilePic">
                    <div class="ml-3">
                        <h1 class="font-bold text-xl">
                            <%= user.name %>
                        </h1>
                        <small class="text-zinc-600">
                            <%=post.createdAt.toLocaleDateString() %> | <%=post.createdAt.toLocaleTimeString() %>
                        </small>
                    </div>
                </div>
                <img class="w-full h-[40vh] object-cover" src="/images/<%= post.media %>" alt="postMedia">
                <!-- <div class="text-2xl flex gap-x-5 mt-1">
                    <i class="ri-heart-3-line"></i>
                    <i class="ri-chat-3-line"></i>
                </div> -->
                <div class="flex justify-between items-center mt-1">
                    <div class="flex items-center">
                        <span class="text-md mr-2">
                            <%= post.likes.length %>
                        </span>
                        <a class="text-2xl" href="/likes/<%= post._id %>">
                            <% if(post.likes.includes(user._id)) { %>
                                <i class="ri-heart-3-fill text-red-300"></i>
                                <% } else { %>
                                    <i class="ri-heart-3-line"></i>

                                    <% } %>
                        </a>
                    </div>

                    <div class="text-2xl">
                        <a href="/update-post/<%= post._id %>"> <i class="text-blue-300 ri-edit-box-line"></i></a>
                        <a href="/delete-post/<%= post._id %>"><i class="text-red-300 ri-delete-bin-4-line"></i></a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

    <%- include('partials/footer') %>